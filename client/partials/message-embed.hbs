<div class="embed" style="{{#if this.color}}border-left-color:{{this.color}};{{/if}}{{#if this.thumbnail.url}}min-height:130px;{{/if}}">
    {{#if this.thumbnail.url}}
    <img src="{{this.thumbnail.url}}" height="100" class="embed-thumbnail">
    {{/if}}
    {{#if this.author}}
    <div class="embed-author">
        {{#if this.author.iconURL}}
        <img src="{{this.author.iconURL}}">
        {{/if}}

        <a{{#if this.author.url}} href="{{this.author.url}}"{{/if}} target="_blank">
            {{this.author.name}}
        </a>
    </div>
    {{/if}}
    <a data-parse="message-content"{{#if this.url}} href="{{this.url}}"{{/if}} target="_blank" class="embed-title {{#if this.url}}embed-title-link{{/if}}">
        {{this.title}}
    </a>
    <p data-parse="message-content" class="embed-description">
        {{this.description}}
    </p>
    <div class="embed-field-container">
        {{#each this.fields}}
        <div class="embed-field"{{#if this.inline}} style="display:inline-block"{{/if}}>
            <div data-parse="message-content" class="embed-field-name">
                {{this.name}}
            </div>
            <div data-parse="message-content" class="embed-field-value">
                {{this.value}}
            </div>
        </div>
        {{/each}}
    </div>
    {{#if this.image}}
    <img src="{{this.image.url}}" class="embed-image">
    {{/if}}
    <div class="embed-footer">
        {{this.footer.text}}
    </div>
</div>